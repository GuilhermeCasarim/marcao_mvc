<!-- src/views/posts.twig -->
{% extends "layouts/main.twig" %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Todos os Posts</h1>
    <a href="/create/post" class="btn btn-primary">Novo Post</a>
</div>

{% if posts is empty %}
    <div class="alert alert-info text-center">
        <h4>Nenhum post encontrado</h4>
        <p>Ainda não há posts publicados.</p>
        <a href="/create/post" class="btn btn-primary">Criar o primeiro post</a>
    </div>
{% else %}
    <!-- Informações da paginação -->
    <div class="mb-3 text-muted">
        Exibindo {{ pagination.startItem }} a {{ pagination.endItem }} de {{ pagination.total }} posts
    </div>

    <!-- Lista de posts -->
    {% for post in posts %}
        <article class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <h3 class="card-title">
                            <a href="/post/{{ post.slug }}" class="text-decoration-none">
                                {{ post.titulo }}
                            </a>
                        </h3>
                        
                        <div class="post-meta mb-3">
                            Por <strong>{{ post.autor.nome }}</strong> 
                            em <a href="/category/{{ post.categoria.slug }}" class="text-decoration-none">{{ post.categoria.nome }}</a>
                            • {{ post.criadoEm | date("d/m/Y H:i") }}
                        </div>
                        
                        <p class="card-text">{{ post.excerpt }}</p>
                        
                        {% if post.tags is not empty %}
                            <div class="mb-2">
                                {% for tag in post.tags %}
                                    <span class="tag">{{ tag.nome }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="col-md-3 text-end">
                        <a href="/post/{{ post.slug }}" class="btn btn-outline-primary">Ler mais</a>
                    </div>
                </div>
            </div>
        </article>
    {% endfor %}

    <!-- Paginação -->
    {% if pagination.totalPages > 1 %}
        <nav aria-label="Paginação dos posts">
            <ul class="pagination justify-content-center">
                <!-- Página anterior -->
                {% if pagination.hasPrevPage %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.prevPage }}">Anterior</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">Anterior</span>
                    </li>
                {% endif %}

                <!-- Números das páginas -->
                {% set startPage = max(1, pagination.currentPage - 2) %}
                {% set endPage = min(pagination.totalPages, pagination.currentPage + 2) %}

                {% if startPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="?page=1">1</a>
                    </li>
                    {% if startPage > 2 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                {% endif %}

                {% for page in startPage..endPage %}
                    {% if page == pagination.currentPage %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% else %}
                        <li class="page-item">
                            <a class="page-link" href="?page={{ page }}">{{ page }}</a>
                        </li>
                    {% endif %}
                {% endfor %}

                {% if endPage < pagination.totalPages %}
                    {% if endPage < pagination.totalPages - 1 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.totalPages }}">{{ pagination.totalPages }}</a>
                    </li>
                {% endif %}

                <!-- Próxima página -->
                {% if pagination.hasNextPage %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.nextPage }}">Próxima</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">Próxima</span>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endif %}
{% endblock %}