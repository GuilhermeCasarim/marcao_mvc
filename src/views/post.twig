<!-- src/views/post.twig -->
{% extends "layouts/main.twig" %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        <article class="bg-white p-4 rounded shadow-sm">
            <!-- Cabe√ßalho do post -->
            <header class="mb-4">
                <h1>{{ post.titulo }}</h1>
                
                <div class="post-meta mb-3">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Autor:</strong> {{ post.autor.nome }}<br>
                            <strong>Categoria:</strong> 
                            <a href="/category/{{ post.categoria.slug }}" class="text-decoration-none">
                                {{ post.categoria.nome }}
                            </a>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <strong>Publicado:</strong> {{ post.criadoEm | date("d/m/Y H:i") }}<br>
                            {% if post.atualizadoEm != post.criadoEm %}
                                <strong>Atualizado:</strong> {{ post.atualizadoEm | date("d/m/Y H:i") }}
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Tags -->
                {% if post.tags is not empty %}
                    <div class="mb-3">
                        <strong>Tags:</strong>
                        {% for tag in post.tags %}
                            <span class="tag">{{ tag.nome }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
            </header>

            <!-- Conte√∫do do post -->
            <div class="post-content">
                {{ post.conteudo | nl2br }}
            </div>

            <!-- Navega√ß√£o -->
            <div class="mt-4 pt-3 border-top">
                <div class="row">
                    <div class="col-6">
                        <a href="/posts" class="btn btn-outline-secondary">
                            ‚Üê Todos os Posts
                        </a>
                    </div>
                    <div class="col-6 text-end">
                        <a href="/category/{{ post.categoria.slug }}" class="btn btn-outline-primary">
                            Mais em {{ post.categoria.nome }}
                        </a>
                    </div>
                </div>
            </div>
        </article>

        <!-- Posts relacionados -->
        {% if relatedPosts is not empty %}
            <div class="mt-4">
                <h3>Posts Relacionados</h3>
                <div class="row">
                    {% for related in relatedPosts %}
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <a href="/post/{{ related.slug }}" class="text-decoration-none">
                                            {{ related.titulo }}
                                        </a>
                                    </h6>
                                    <p class="card-text small">{{ related.excerpt }}</p>
                                    <small class="text-muted">{{ related.criadoEm | date("d/m/Y") }}</small>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>

    <!-- Sidebar -->
    <div class="col-md-4">
        <!-- Informa√ß√µes do autor -->
        <div class="sidebar">
            <h5>Sobre o Autor</h5>
            <h6>{{ post.autor.nome }}</h6>
            {% if post.autor.bio %}
                <p>{{ post.autor.bio }}</p>
            {% endif %}
            <small class="text-muted">{{ post.autor.email }}</small>
        </div>

        <!-- Categoria -->
        <div class="sidebar">
            <h5>Categoria</h5>
            <h6>
                <a href="/category/{{ post.categoria.slug }}" class="text-decoration-none">
                    {{ post.categoria.nome }}
                </a>
            </h6>
            {% if post.categoria.descricao %}
                <p>{{ post.categoria.descricao }}</p>
            {% endif %}
        </div>

        <!-- Compartilhamento (opcional) -->
        <div class="sidebar">
            <h5>Compartilhar</h5>
            <button class="btn btn-primary btn-sm" onclick="navigator.share({title: '{{ post.titulo }}', url: window.location.href})">
                üì§ Compartilhar
            </button>
        </div>
    </div>
</div>
{% endblock %}